@page
@model LibraryManagementSystem.Pages.Copies.GetCopiesModel
@{
}
<h3 class="display-3"> Available Copies of <b>@Model.Title</b></h3>
<table class="table">
    <thead>
        <tr>
            <th> Copy ID</th>
            <th>  Book Name</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>

        
        @if (Model != null)
        {
            foreach (var @item in Model.Copies)
            {
        <tr>
            <td>@item.CopyId</td>

            <td>  @Model.Title</td>
            <td>  <a type="button" class="btn btn-success"> Loan Book</a></td>
        </tr>
            }
        }
</table>